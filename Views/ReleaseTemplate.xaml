<UserControl x:Class="VpdbAgent.Views.ReleaseTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VpdbAgent.Views"
			 xmlns:UserControls="clr-namespace:VpdbAgent.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Label x:Name="title" Content="{Binding Name}" HorizontalAlignment="Left" Margin="49,0,0,0" VerticalAlignment="Top"/>
        <Image x:Name="thumb" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="49"/>

    </Grid>
</UserControl>
