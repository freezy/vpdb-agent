<UserControl x:Class="VpdbAgent.Views.Downloads.DownloadItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VpdbAgent.Views.Downloads"
             xmlns:c="clr-namespace:VpdbAgent.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="900">

    <Grid Margin="10,10,20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- image -->
        <c:UrlImage x:Name="Thumb" Grid.Column="0" Grid.Row="0" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- data -->
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Grid.ColumnSpan="2">
            <TextBlock Style="{StaticResource Label}" TextTrimming="CharacterEllipsis">
                <TextBlock.Inlines>
                    <Run x:Name="GameName" Text="Medieval Madness (Williams 1997)" FontWeight="Bold"/>
                    <Run Text=" – "/>
                    <Run x:Name="ReleaseName" Text="Castle Crusher Edition"/>
                    <Run x:Name="ReleaseVersion" Text="1.0"/>
                </TextBlock.Inlines>
            </TextBlock>
            <Label Padding="0">
                <TextBlock x:Name="FileName" Text="Castle Crusher Edition 1.2" TextTrimming="CharacterEllipsis" />
            </Label>
        </StackPanel>

        <!-- right side stats -->
        <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Vertical">
            <Label Padding="0" x:Name="DownloadSpeed" HorizontalAlignment="Right" Content="1.43 MB/s" />
            <TextBlock Style="{StaticResource Label}" HorizontalAlignment="Right">
                <TextBlock.Inlines>
                    <Run x:Name="DownloadSize" Text="8.9 MB" />
                    <Run x:Name="DownloadPercent" Text="9%" FontWeight="Bold" Foreground="{StaticResource PrimaryColorBrush}"/>
                </TextBlock.Inlines>
            </TextBlock>
        </StackPanel>

        <!-- progress bar -->
        <ProgressBar x:Name="ProgressBar" Style="{StaticResource BlehProgressBar}" Grid.ColumnSpan="4" Grid.Row="1" Grid.Column="0" Margin="0,15,0,10" IsIndeterminate="False" Value="10"/>

        <!-- success message -->
        <StackPanel x:Name="StatusSuccess"  Grid.ColumnSpan="3" Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Background="{StaticResource DarkGreenBrush}" Margin="-7,0,0,0">
            <c:IconControl Margin="60,0,5,0" Height="18" Width="18" Foreground="{StaticResource LabelTextBrush}" Data="{StaticResource IconStar}" />
			<Label Content="Successfully downloaded 5min ago."/>
        </StackPanel>


        <Separator Grid.ColumnSpan="3" Grid.Row="2" Grid.Column="0" Margin="0,5,0,5"/>

    </Grid>
</UserControl>
